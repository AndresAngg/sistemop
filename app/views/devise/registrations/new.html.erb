  <div class="field mt-5">
    <%= f.label :Nombre %><br />
    <%= f.text_field :name, autofocus: false, class: "form-control mb-5"%>
  </div>
  <div class="field">
    <%= f.label :Correo %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-5"%>
  </div>

  <div class="field">
